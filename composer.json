{
    "name":              "dreamfactory/dfe-console",
    "description":       "DreamFactory Enterprise(tm) Administrative Console",
    "homepage":          "https://www.dreamfactory.com/",
    "keywords":          ["dreamfactory", "fabric", "utility", "cli"],
    "license":           ["proprietary"],
    "authors":           [
        {
            "name":  "Jerry Ablan",
            "email": "jerryablan@dreamfactory.com"
        }
    ],
    "minimum-stability": "dev",
    "repositories":      [
        {
            "type": "vcs",
            "url":  "git@github.com:dreamfactorysoftware/fabric-common.git"
        }, {
            "type": "vcs",
            "url":  "git@github.com:dreamfactorysoftware/fabric-db.git"
        }, {
            "type": "vcs",
            "url":  "git@github.com:dreamfactorysoftware/fabric-queue.git"
        }, {
            "type": "vcs",
            "url":  "git@github.com:dreamfactorysoftware/fabric-queue-models.git"
        }, {
            "type": "vcs",
            "url":  "git@github.com:dreamfactorysoftware/fabric-couchdb.git"
        }
    ],
    "require":           {
        "laravel/framework":          "4.2.*",
        "radic/blade-extensions":     "1.*",
        "doctrine/couchdb-odm":       "*",
        "dreamfactory/console-tools": "dev-develop as dev-master",
        "dreamfactory/fabric-queue":  "dev-develop as dev-master",
        "dreamfactory/php-utils":     "*"
    },
    "require-dev":       {
        "way/generators":  "~2.0",
        "phpunit/phpunit": "@stable"
    },
    "extra":             {
        "branch-alias": {
            "dev-develop": "1.0.x-dev"
        }
    },
    "autoload":          {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ],
        "psr-4":    {
            "DreamFactory\\Enterprise\\Console\\": "app/"
        }
    },
    "scripts":           {
        "post-install-cmd":        [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd":         [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    }
}
