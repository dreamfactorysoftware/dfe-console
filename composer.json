{
	"name":              "dreamfactory/dfe-console",
	"description":       "DreamFactory Enterprise(tm) Administrative Console",
	"homepage":          "https://www.dreamfactory.com/",
	"keywords":          [
		"dreamfactory",
		"fabric",
		"utility",
		"cli"
	],
	"license":           [
		"proprietary"
	],
	"authors":           [
		{
			"name":  "Jerry Ablan",
			"email": "jerryablan@dreamfactory.com"
		}
	],
	"minimum-stability": "dev",
	"repositories":      [
		{
			"type": "vcs",
			"url":  "git@github.com:dreamfactorysoftware/dfe-database.git"
		},
		{
			"type": "vcs",
			"url":  "git@github.com:dreamfactorysoftware/dfe-ops-client.git"
		},
		{
			"type": "vcs",
			"url":  "git@github.com:dreamfactorysoftware/dfe-common.git"
		},
		{
			"type": "vcs",
			"url":  "git@github.com:dreamfactorysoftware/dfe-audit.git"
		}
	],
	"type":              "project",
	"require":           {
		"laravel/framework":           "5.0.*",
		"guzzlehttp/guzzle":           "~4.0",
		"predis/predis":               "~1.1@dev",
		"wpb/string-blade-compiler":   "2.*@dev",
		"ruflin/elastica":             "*",
		"graham-campbell/flysystem":   "~2.1",
		"league/flysystem-sftp":       "~1.0",
		"league/flysystem-ziparchive": "~1.0",
		"dreamfactory/dfe-audit":      "~1.0",
		"dreamfactory/php-utils":      "*",
		"dreamfactory/console-tools":  "dev-develop as dev-master",
		"dreamfactory/dfe-common":     "dev-develop as dev-master",
		"dreamfactory/dfe-ops-client": "dev-develop as dev-master",
		"dreamfactory/dfe-database":   "dev-develop as dev-master"
	},
	"require-dev":       {
		"illuminate/html":             "5.0.*",
		"barryvdh/laravel-ide-helper": "~2.0",
		"doctrine/dbal":               "~2.3",
		"phpspec/phpspec":             "~2.1",
		"phpunit/phpunit":             "~4.0",
		"way/generators":              "~3.0"
	},
	"autoload":          {
		"psr-4": {
			"DreamFactory\\Enterprise\\Console\\":  "app/",
			"DreamFactory\\Enterprise\\Services\\": "lib/Services/"
		}
	},
	"autoload-dev":      {
		"psr-4":    {
			"DreamFactory\\Enterprise\\Common\\": "/opt/dreamfactory/dfe/dfe-common/"
		},
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts":           {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan ide-helper:generate",
			"php artisan optimize",
			"php artisan vendor:publish"
		],
		"post-update-cmd":  [
			"php artisan clear-compiled",
			"php artisan ide-helper:generate",
			"php artisan optimize",
			"php artisan vendor:publish --tag=public --force"
		]
	},
	"config":            {
		"preferred-install": "dist"
	},
	"extra":             {
		"branch-alias": {
			"dev-develop": "1.0.x-dev"
		}
	}
}
