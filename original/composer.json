{
	"name":              "dreamfactory/cerberus",
	"description":       "DreamFactory Fabric(tm) Authentication and Authorization System",
	"authors":           [
		{
			"name":  "Jerry Ablan",
			"email": "jerryablan@dreamfactory.com",
			"role":  "Lead architect and developer"
		}
	],
	"repositories":      [
		{
			"type": "vcs",
			"url":  "git@bitbucket.org:dreamfactory/lib-dfphp.git"
		},
		{
			"type": "vcs",
			"url":  "git@bitbucket.org:dreamfactory/fabric-cli.git"
		}
	],
	"minimum-stability": "dev",
	"require":           {
		"php":                                   ">=5.3.10",
		"kisma/kisma":				 "~0.2@stable",
		"dreamfactory/yii":                      "~1.1.13.1",
		"dreamfactory/lib-php-common-yii":       "~1.4",
		"dreamfactory/lib-dfphp":                "*",
		"swiftmailer/swiftmailer":               "~4.3.0",
		"jmhobbs/swiftmailer-transport-aws-ses": "*",
		"ruflin/Elastica":                       "*"
	},
	"autoload":          {
		"psr-4": {
			"Cerberus\\": "src/"
		}
	},
	"config":            {
		"bin-dir": "../config/scripts"
	},
	"scripts":           {
		"post-update-cmd": "Cerberus\\Services\\Composer\\Installer::postUpdate"
	}
}
